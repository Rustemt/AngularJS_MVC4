@{
    ViewBag.Title = "Form with AngularJS";
    Layout = "../Shared/_Layout.cshtml";
}


<div data-ng-controller="MyController">
    
    <form class="form-horizontal" role="form">
        <div class="form-group">
            <label for="inputEmail1" class="col-lg-2 control-label">First Name</label>
            <div class="col-lg-8">
                <input type="text" required ng-model="firstName" class="form-control" id="firstName" placeholder="Enter First Name">
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword1" class="col-lg-2 control-label">Last Name</label>
            <div class="col-lg-8">
                <input type="text" class="form-control" id="lastName" placeholder="Enter Last Name">
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword1" class="col-lg-2 control-label">Email</label>
            <div class="col-lg-8">
                <input type="text" class="form-control" id="email" placeholder="Enter Email (username@domain.com)">
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <div class="checkbox">
                    <label>
                        <input type="checkbox"> Remember me
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <button type="submit" class="btn btn-default">Save</button>
                <button type="reset" class="btn btn-default">Reset</button>
            </div>
        </div>
    </form>

</div>

<script type="text/javascript">
    MyController = function ($scope) {
    };
</script>
