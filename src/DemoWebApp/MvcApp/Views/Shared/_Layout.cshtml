<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Public/bootstrap/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
</head>
    <body class="container" data-ng-app>
        <img src="https://www.seoclerks.com/pics/103822-1.png" style="height: 140px;float:right" alt="MVC4"/>
        <img src="http://www.airpair.com/images/tech/angularjs.jpeg" style="height: 100px;float:right" alt="AngularJS"/>  
        <h2>AngularJS + MVC4 Demo Apps</h2>
        
        @if (ViewContext.RouteData.Values["controller"].ToString() != "Home"
             || ViewContext.RouteData.Values["action"].ToString() != "Index")
        {
            <p><a href="/">&lt;&lt; Back</a></p>
        }

        @RenderBody()

        <script src="@Url.Content("~/Public/jquery/jquery.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Public/angularjs/angular.min.js")" type="text/javascript"></script>

        @RenderSection("scripts", required: false)
    </body>
</html>
